<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/activity_record_audio"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="com.abstractx1.mydiary.RecordActivity">

    <LinearLayout
            android:id="@+id/topLinearLayout"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:background="@color/gray"
            android:layout_above="@+id/bottomLinearLayout">

    <RelativeLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_margin="3dp"
            android:layout_above="@+id/bottomLinearLayout">

        <TextView
                android:text="@string/zero_seconds"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_margin="3dp"
                android:id="@+id/recordingDurationTextView"
                android:textSize="20sp"/>

        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_margin="1dp"
                app:srcCompat="@android:drawable/ic_btn_speak_now"
                android:background="?selectableItemBackgroundBorderless"
                android:id="@+id/recordButton"
                android:layout_toRightOf="@+id/recordingDurationTextView"/>

        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_margin="1dp"
                app:srcCompat="@android:drawable/ic_media_play"
                android:background="?selectableItemBackgroundBorderless"
                android:id="@+id/playButton"
                android:layout_toRightOf="@+id/recordButton"/>

        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_margin="1dp"
                app:srcCompat="@android:drawable/ic_menu_delete"
                android:background="?selectableItemBackgroundBorderless"
                android:id="@+id/clearRecordingButton"
                android:layout_toRightOf="@+id/playButton"/>


        <SeekBar
                android:id="@+id/recordingSeekBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_margin="3dp"
                android:progress="0"
                android:layout_toRightOf="@+id/clearRecordingButton" />

    </RelativeLayout>
    </LinearLayout>
    <LinearLayout
            android:id="@+id/bottomLinearLayout"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:background="@color/gray"
            android:layout_alignParentBottom="true">

        <EditText
                android:id="@+id/answerEditText"
                android:layout_width="0dp"
                android:layout_weight=".80"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:inputType="text|textAutoCorrect|textMultiLine"
                android:maxLines="5"
                android:scrollbars="vertical"
                android:background="@color/white"
                android:hint="Answer here..."
                android:imeOptions="flagNoFullscreen"/>

        <Button
                android:layout_width="0dp"
                android:layout_weight=".20"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:id="@+id/saveButton"
                android:textAllCaps="false"
                android:text="Save" />
    </LinearLayout>

</RelativeLayout>
